<%- include('../partials/header.ejs') %>

<%- include('../partials/preheader.ejs', {preheader: "Here is your patient data"}) %>
<table role="presentation" border="0" cellpadding="0" cellspacing="0" class="body">
	<tr>
		<td>
			&nbsp;</td>
		<td class="container">
			<div class="content">

				<%- include('../partials/logo.ejs') %>

				<!-- START CENTERED WHITE CONTAINER -->
				<table role="presentation" class="main" id="content">

					<!-- START MAIN CONTENT AREA -->
					<tr>
						<td class="wrapper">
							<table role="presentation" id="subtable" border="0" cellpadding="0" cellspacing="0">
								<tr>
									<td>
										<p>Hi,</p>
										<p>You recently requested to get information about your current status.</p>
										<table>
											<tbody>
												<tr>
													<td>Name:</td>
													<td><%= patientData.name %></td>
												</tr>
												<tr>
													<td>Patient Number:</td>
													<td><%= patientData.patientNumber %></td>
												</tr>
												<tr>
													<td>Status:</td>
													<td><%= patientData.status %></td>
												</tr>
											</tbody>
										</table>


										<table id="covid-tests-table">
											<thead>
												<tr>
													<th>Date</th>
													<th>Status</th>
													<th>Result</th>
												</tr>
											</thead>
											<tbody>
												<% if(patientData.tests.length > 0) { %>
												<% for (covidTest of patientData.tests ) { %>
												<tr>
													<td><%= new Date(covidTest.date).toLocaleString() %></td>
													<td><%= covidTest.status %></td>
													<td><%= covidTest.result %></td>
												</tr>
												<% } %>
												<% } else { %>
												<p> You haven't made any tests yet.'</p>
												<% } %>
											</tbody>
										</table>
									</td>
								</tr>
							</table>
						</td>
					</tr>

					<!-- END MAIN CONTENT AREA -->
				</table>
				<!-- END CENTERED WHITE CONTAINER -->
				<!-- START FOOTER -->
				<%- include('../partials/copyright.ejs') %>
				<!-- END FOOTER -->

			</div>
		</td>
		<td>&nbsp;</td>
	</tr>
</table>

<%- include('../partials/footer.ejs') %>